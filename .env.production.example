# Production Environment Configuration Template
# Copy this file to .env.production and fill in actual values
# NEVER commit the actual .env.production file to version control

# =============================================================================
# CRITICAL SECURITY SETTINGS - MUST BE SET
# =============================================================================

# Database Configuration (REQUIRED)
POSTGRES_USER=llm_production_user
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
POSTGRES_DB=llm_testing_production
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Encryption Key (REQUIRED - Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=REPLACE_WITH_GENERATED_ENCRYPTION_KEY

# JWT Secret (REQUIRED - Generate with: openssl rand -base64 32)
JWT_SECRET_KEY=REPLACE_WITH_GENERATED_JWT_SECRET

# Grafana Admin Password (REQUIRED)
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=production
DEBUG=false
TESTING=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=300

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501
DASHBOARD_TITLE="LLM A/B Testing Platform - Production"

# =============================================================================
# EXTERNAL SERVICES - LLM PROVIDERS
# =============================================================================

# OpenAI (Optional - remove if not using)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Optional - remove if not using)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google (Optional - remove if not using)
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_URL=redis://redis:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# =============================================================================
# DATABASE TUNING
# =============================================================================

DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_TIMEOUT=30
SQLALCHEMY_ECHO=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Authentication
ENABLE_AUTHENTICATION=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true

# CORS (Adjust to your domain)
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Security Headers
ENABLE_SECURITY_HEADERS=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus
PROMETHEUS_URL=http://prometheus:9090

# Grafana
GRAFANA_URL=http://grafana:3000

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json
LOG_FILE=/var/log/llm-testing.log

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000

# LLM Provider Settings
LLM_REQUEST_TIMEOUT=300
LLM_MAX_RETRIES=3
LLM_BATCH_SIZE=10

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Health Check Settings
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# OPTIONAL: ADVANCED SETTINGS
# =============================================================================

# Feature Flags
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_EXPERIMENTAL_FEATURES=false

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Email Notifications (Optional)
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_USERNAME=notifications@yourdomain.com
# SMTP_PASSWORD=your-smtp-password
# NOTIFICATION_EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# SECURITY CHECKLIST
# =============================================================================
# 
# Before deploying to production:
# [ ] Replace ALL placeholder values with actual secure values
# [ ] Generate strong, unique passwords for all services
# [ ] Generate new encryption and JWT keys
# [ ] Restrict CORS_ORIGINS to your actual domains
# [ ] Set LOG_LEVEL to WARNING or ERROR
# [ ] Disable DEBUG mode
# [ ] Enable all security features
# [ ] Verify all required environment variables are set
# [ ] Never commit this file with real values to version control
# [ ] Store secrets in a secure secret management system
# [ ] Regularly rotate encryption keys and passwords
#